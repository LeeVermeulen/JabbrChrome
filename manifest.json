{
  "manifest_version": 2,

  "name": "Seekr",
  "description": "Seekr is a reverse search engine for finding search results based on a URL.",
  "version": "1.4",
  
  "icons": { "128": "icon_large.png" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
	    "tabs", "http://*/*", "https://*/*", "notifications", "background"
	  ],
	"options_page": "fancy-settings/index.html",
	"default_locale": "en_US"
}
